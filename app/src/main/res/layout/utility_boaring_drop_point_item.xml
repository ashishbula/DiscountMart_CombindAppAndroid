<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Layout for drop and boarding time , address-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small"
        android:orientation="horizontal">

        <!--Text Time-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/txt_size_normal"
            android:id="@+id/board_drop_point_txt_date"
            android:layout_weight=".4"/>

        <!--Layout for text adress and landmark-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:padding="@dimen/margin_v_small"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Address-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_medium"
                android:id="@+id/board_drop_point_txt_address"/>

            <!--Landmark-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_v_small"
                android:textSize="@dimen/txt_size_medium"
                android:id="@+id/board_drop_point_txt_landmark"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>