<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--Layout Airindia flight-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:id="@+id/flight_filter_act_layout_airindia"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/str_airindia"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_normal"/>
        <CheckBox
            android:layout_width="@dimen/margin_x_large"
            android:layout_height="@dimen/margin_x_large"
            android:id="@+id/flight_filter_act_chekbox_airindia"
            />
    </LinearLayout>

</LinearLayout>