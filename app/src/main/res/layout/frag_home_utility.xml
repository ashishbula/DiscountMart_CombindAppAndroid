<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="0"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Top Services-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:id="@+id/homedash_top_layout"
                android:padding="@dimen/margin_v_small"
                android:layout_margin="@dimen/margin_v_small"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/yellow_bg_box_round_corner"
                android:baselineAligned="false">

                <!--Wallet-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="0dp"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:id="@+id/homedash_frag_service_wallet"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_weight="1">
                    <!--Layout for image-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:padding="0dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/utility_dash_ic_wallet"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:visibility="visible"
                            android:textAlignment="center"
                            android:layout_marginTop="0dp"
                            android:textSize="@dimen/txt_default"
                            android:text="@string/str_wallet"/>
                    </LinearLayout>



                </LinearLayout>

                <!--Add fund-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="0dp"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:id="@+id/homedash_frag_service_addfund"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_weight="1">

                    <!--Layout for image-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.4"
                        android:padding="0dp"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/utility_dash_ic_add_fund"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginTop="0dp"
                            android:visibility="visible"
                            android:textAlignment="center"
                            android:textSize="@dimen/txt_default"
                            android:text="@string/str_add_fund"/>
                    </LinearLayout>



                </LinearLayout>

                <!-- fund request-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="0dp"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:id="@+id/homedash_frag_service_fundreq"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_weight="1">

                    <!--Layout for image-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:padding="0dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/utility_dash_ic_fund_request"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <!--Text fund request-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:visibility="visible"
                            android:textAlignment="center"
                            android:layout_marginTop="0dp"
                            android:textSize="@dimen/txt_default"
                            android:text="@string/str_fund_req"/>
                    </LinearLayout>



                </LinearLayout>
                <!-- Transaction -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="0dp"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:id="@+id/homedash_frag_service_transaction"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_weight="1">

                    <!--Layout for image-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1.4"
                        android:padding="0dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/utility_dash_ic_transaction"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <!--Text fund request-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:visibility="visible"
                            android:textAlignment="center"
                            android:layout_marginTop="0dp"
                            android:textSize="@dimen/txt_default"
                            android:text="@string/str_transaction"/>
                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>


            <!-- Layout for utility services-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/margin_small"
                    android:orientation="vertical">

                    <!--Text Title-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:textSize="@dimen/txt_default"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="@string/str_utility_services"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:layout_marginTop="@dimen/margin_v_small"
                            android:orientation="horizontal">

                            <!--Flight-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginTop="0dp"
                                android:padding="0dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:id="@+id/homedash_frag_service_flight"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/utility_dash_ic_services_1"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/txt_size_normal"
                                    android:visibility="gone"
                                    android:textColor="@color/black"
                                    android:text="@string/str_flight"/>

                            </LinearLayout>
                            <!--Bus-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:padding="0dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:id="@+id/homedash_frag_service_bus"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:src="@mipmap/utility_dash_ic_services_3"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:visibility="gone"
                                    android:textSize="@dimen/txt_size_normal"
                                    android:text="@string/str_bus"/>

                            </LinearLayout>

                            <!--Hotel-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:padding="0dp"
                                android:id="@+id/homedash_frag_service_hotel"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/utility_dash_ic_services_2"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:visibility="gone"
                                    android:textSize="@dimen/txt_size_normal"
                                    android:text="@string/str_hotel"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>




                    <!--Layout for Recharge-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="horizontal">

                        <!--Prepaid-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:padding="0dp"
                            android:id="@+id/homedash_frag_service_prepaid"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/utility_dash_ic_services_5"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:visibility="gone"
                                android:textSize="@dimen/txt_size_normal"
                                android:text="@string/str_prepaid"/>

                        </LinearLayout>
                        <!--Pospaid-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:padding="0dp"
                            android:id="@+id/homedash_frag_service_postpaid"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/utility_dash_ic_services_6"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_normal"
                                android:visibility="gone"
                                android:text="@string/str_postpaid"/>

                        </LinearLayout>


                        <!-- Cab-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="visible"
                            android:foreground="?attr/selectableItemBackground"
                            android:layout_marginBottom="0dp"
                            android:padding="0dp"
                            android:gravity="center"
                            android:id="@+id/homedash_frag_service_cab"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/utility_dash_ic_services_4"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Data Card"
                                android:visibility="gone"
                                android:textSize="@dimen/txt_size_normal"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <!--Layout for Recharge-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="horizontal">

                        <!--DTH-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:padding="0dp"
                            android:id="@+id/homedash_frag_service_dth"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/utility_dash_ic_services_7"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/black"
                                android:visibility="gone"
                                android:textSize="@dimen/txt_size_normal"
                                android:text="@string/str_dth"/>

                        </LinearLayout>
                        <!--Electricity-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:padding="0dp"
                            android:id="@+id/homedash_frag_service_electricity"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/utility_dash_ic_services_8"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:visibility="gone"
                                android:textSize="@dimen/txt_size_normal"
                                android:text="@string/str_elctricity"/>

                        </LinearLayout>
                        <!--Insurance service-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:layout_marginBottom="0dp"
                            android:padding="0dp"
                            android:gravity="center"
                            android:id="@+id/homedash_frag_service_insurance"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/utility_dash_ic_services_9"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Insurance"
                                android:visibility="gone"
                                android:textSize="@dimen/txt_size_normal"
                                />
                        </LinearLayout>


                    </LinearLayout>
                    <!--Layout for Bill payment-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="horizontal">

                        <!--Gas-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:padding="0dp"
                            android:id="@+id/homedash_frag_service_gas"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/utility_dash_ic_services_10"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_normal"
                                android:visibility="gone"
                                android:text="@string/str_gas"/>

                        </LinearLayout>
                        <!--credit card-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:padding="0dp"
                            android:id="@+id/homedash_frag_service_credit"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/utility_dash_ic_services_11"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:visibility="gone"
                                android:textSize="@dimen/txt_size_normal"
                                android:text="@string/str_credit_card"/>
                        </LinearLayout>
                        <!--credit card-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:padding="0dp"
                            android:id="@+id/homedash_frag_service_credit"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/utility_dash_ic_services_12"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:visibility="gone"
                                android:textSize="@dimen/txt_size_normal"
                                android:text="@string/str_credit_card"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!--Slider for offer and news-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:background="@color/gray4"
                android:layout_marginTop="0dp"
                android:orientation="vertical">
                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/homedash_frag_service_slider1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>