<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_small"
        app:cardElevation="@dimen/margin_small"
        app:contentPadding="@dimen/margin_small"
        android:layout_margin="@dimen/margin_small">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Layout for User name , Member name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">

                <!--User name-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/txt_size_medium"
                    android:textColor="@color/black"
                    android:id="@+id/ledger_report_item_txt_username"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--Layout for Date  , Service Type-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <!--Date-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/txt_size_medium"
                    android:textColor="@color/black"
                    android:id="@+id/ledger_report_item_txt_date"
                    android:layout_height="wrap_content" />

                <!--SErvice Type-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/txt_size_medium"
                    android:layout_gravity="right"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:id="@+id/ledger_report_item_txt_servie"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--Layout for Debit/ credit , Balance-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <!--Debit/ credit-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/txt_size_medium"
                    android:textColor="@color/black"
                    android:id="@+id/ledger_report_item_txt_drcr"
                    android:layout_height="wrap_content" />

                <!--Balance-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/txt_size_medium"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/ledger_report_item_txt_bal"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--Layout for Remark-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">

                <!--Remark-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/txt_size_medium"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/ledger_report_item_txt_remark"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>