<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="bottom"
    android:id="@+id/reportlist_frag_layout_main"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <!--Layout for transparent and close button, text title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center|bottom">

        <ImageView
            android:layout_width="@dimen/margin_xx_large"
            android:layout_height="@dimen/margin_xx_large"
            android:src="@drawable/ic_close"
            android:background="@color/black"
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/reportlist_frag_imag_close"/>




    </LinearLayout>

    <!--Recyclerview for Report list-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:id="@+id/reportlist_frag_layout_item"
        android:orientation="horizontal">


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_xx_large"
            android:layout_marginLeft="@dimen/margin_xx_large"
            android:background="@drawable/layout_bg_white"
            android:paddingTop="@dimen/margin_v_small"
            android:paddingBottom="@dimen/margin_small"
            android:id="@+id/reportlist_frag_recycler">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <!--Bottom Arrow-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight=".1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


        </LinearLayout>

        <!--Add Fund-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/reportlist_frag_layout_fund"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reportlist_frag_img_fund"
                android:src="@drawable/ic_arrow_down_white"/>

        </LinearLayout>

        <!--Account-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/reportlist_frag_layout_account"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reportlist_frag_img_account"
                android:src="@drawable/ic_arrow_down_white"/>

        </LinearLayout>

        <!--Report-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/reportlist_frag_layout_report"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reportlist_frag_img_report"
                android:src="@drawable/ic_arrow_down_white"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>