<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:id="@+id/reportlist_activity_layout_main"
    android:layout_marginBottom="@dimen/margin_50dp"
    android:orientation="vertical">

    <!--Layout for transparent and close button, text title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/margin_xx_large"
            android:layout_height="@dimen/margin_xx_large"
            android:src="@drawable/ic_close"
            android:background="@color/black"
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/promocode_activity_imag_close"/>


    </LinearLayout>

    <!--Recyclerview for Report list-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_gravity="bottom"
        android:visibility="visible"
        android:background="@drawable/layout_bg_white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_large"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_normal"
            android:textColor="@color/black"
            android:text="@string/str_select_any"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/gray"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"

            android:id="@+id/reportlist_activity_recycler">

        </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    <!--Bottom Arrow-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight=".1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </LinearLayout>

        <!--Add Fund-->
       <!-- <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/reportlist_activity_layout_fund"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reportlist_activity_img_fund"
                android:src="@drawable/ic_arrow_down_white"/>

        </LinearLayout>-->

        <!--Account-->
        <!--<LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/reportlist_activity_layout_account"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reportlist_activity_img_account"
                android:src="@drawable/ic_arrow_down_white"/>

        </LinearLayout>-->

        <!--Report-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/reportlist_activity_layout_report"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reportlist_activity_img_report"
                android:src="@drawable/ic_arrow_down_white"/>

        </LinearLayout>

        <!--Share app-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/reportlist_activity_layout_shareapp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reportlist_activity_img_shareapp"
                android:src="@drawable/ic_arrow_down_white"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>