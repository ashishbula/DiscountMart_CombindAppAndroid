<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/margin_small">
    <!--Layout for Text Product info-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:orientation="horizontal">
            <!--checkbox-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:orientation="vertical">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/product_item_cnkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:buttonTint="@color/colorPrimaryDark"
                    android:visibility="visible" />
            </LinearLayout>
            <!--Text Product name-->
            <TextView
                android:id="@+id/product_item_txt_pname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Name"
                android:gravity="left|center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_medium" />
        </LinearLayout>
        <!--Layout for Text Product name, price-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="DP"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_small" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="PV"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_small" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="bold"
                android:text="Shipping"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_item_txt_dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_small" />

            <TextView
                android:id="@+id/product_item_txt_pv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_small" />
            <!--Text Product price-->
            <TextView
                android:id="@+id/product_item_txt_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_small" />
        </LinearLayout>

    </LinearLayout>
    <!--Layout for Text Product increment, decrement-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".1"
        android:background="@drawable/white_bg_box_black_border"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="1dp">

        <TextView
            android:id="@+id/product_item_txt_decrese"
            android:layout_width="@dimen/margin_x_large"
            android:layout_height="@dimen/margin_x_large"
            android:layout_gravity="center"
            android:background="@color/LightGray"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_medium"
            android:visibility="visible"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"/>

        <TextView
            android:id="@+id/product_item_txt_number"
            android:layout_width="@dimen/margin_x_large"
            android:layout_height="@dimen/margin_x_large"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_medium" />

        <TextView
            android:id="@+id/product_item_txt_increse"
            android:layout_width="@dimen/margin_x_large"
            android:layout_height="@dimen/margin_x_large"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="+"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_medium" />

    </LinearLayout>


</LinearLayout>