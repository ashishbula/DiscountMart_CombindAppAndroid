<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3">

    <!--S.no-->
    <TextView
        android:layout_width="0dp"
        android:layout_weight=".4"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1"
        android:textSize="@dimen/txt_size_medium"
        android:textColor="@color/black"
        android:id="@+id/bus_book_detail_act_txt_seat_count"/>

    <!--SEat type-->
    <TextView
        android:layout_width="0dp"
        android:layout_weight=".8"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Seat"
        android:textSize="@dimen/txt_size_medium"
        android:textColor="@color/black"
        android:id="@+id/bus_book_detail_act_txt_seat_name"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".1">

    </LinearLayout>

    <!--Name-->
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.3"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ashish"
        android:textSize="@dimen/txt_size_medium"
        android:layout_marginLeft="@dimen/margin_v_small"
        android:textColor="@color/black"
        android:id="@+id/bus_book_detail_act_txt_passenger_name"/>

    <!--Age-->
    <TextView
        android:layout_width="0dp"
        android:layout_weight=".4"
        android:layout_height="wrap_content"
        android:text="20"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/txt_size_medium"
        android:layout_marginLeft="@dimen/margin_v_small"
        android:textColor="@color/black"
        android:id="@+id/bus_book_detail_act_txt_passenger_age"/>

</LinearLayout>